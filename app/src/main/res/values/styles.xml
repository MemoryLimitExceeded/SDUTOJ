<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/lightgray</item>
    </style>

    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="NormalTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TitleTextView" parent="NormalTextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BigTitleTextView" parent="TitleTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallTextView" parent="NormalTextView">
        <item name="android:textSize">12sp</item>
    </style>
    
    <style name="NormalCardView" parent="CardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">10dp</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="BaseDialogFragment" parent="AppTheme">
        <item name="colorPrimaryDark">@color/lightgray</item>
    </style>

</resources>
