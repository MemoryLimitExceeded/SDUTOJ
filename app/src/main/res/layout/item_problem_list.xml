<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/NormalCardView">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_problem_list_limit"
                style="@style/SmallTextView"
                android:layout_below="@id/item_problem_list_title"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_problem_list_title"
                style="@style/TitleTextView"
                android:layout_width="match_parent" />

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/item_problem_list_commit_count"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@id/item_problem_list_create_date"
                android:src="@drawable/ic_problem_create_date" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_problem_list_create_date"
                style="@style/SmallTextView"
                android:layout_below="@id/item_problem_list_title"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp" />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/item_problem_list_commit_count"
                style="@style/SmallTextView"
                android:layout_below="@id/item_problem_list_create_date"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>